<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center">

    <CheckBox
        android:id="@+id/checkBoxProds01"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewPrice01"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|center_vertical"
        android:textColor="#090606"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewQuant01"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|center_vertical"
        android:textColor="#090606"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/imageButtonInf01"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#08FFFFFF"
        android:outlineAmbientShadowColor="#02FFFFFF"
        android:outlineSpotShadowColor="#00FFFFFF"
        app:srcCompat="@drawable/inf1_foreground" />

    <ImageView
        android:id="@+id/imageViewUrg01"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>
