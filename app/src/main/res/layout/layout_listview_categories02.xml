<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <CheckBox
        android:id="@+id/checkBoxProds_layoutlistviewcategories02"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewPriceProduct_layoutlistviewategories01"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|center_vertical"
        android:textColor="#090606"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewQuantProduct_layoutlistviewategories02"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|center_vertical"
        android:textColor="#090606"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageViewProductsOfCategory"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>
